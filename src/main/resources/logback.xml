<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%p] [%c:%L] - %m%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
  <logger name="vendor.akka.event.slf_4j" level="WARN">
    <appender-ref ref="STDOUT"/>
  </logger>
</configuration>
